<form method="post" id = "formuadmin" class="mt-5 mb-3 formuadmin"  >
    <input type = "hidden" asp-for ="Seguro.IdSeguro"/>
    <div class="form-group">
        <label asp-for ="Seguro.FechaCompra"></label>
        <input asp-for = "Seguro.FechaCompra" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for ="Seguro.FechaInicial"></label>
        <input asp-for = "Seguro.FechaInicial" class="form-control">
    </div>
        <div class="form-group">
        <label asp-for ="Seguro.FechaFinal"></label>
        <input asp-for = "Seguro.FechaFinal" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for ="Seguro.ValorSeguro"></label>
        <input asp-for = "Seguro.ValorSeguro" class="form-control">
    </div>
    <label for="descripcion" class="form-label">Placa</label>
            <select asp-for="Seguro.IdVehiculo" class="form-control">                
             @foreach (var vehiculo in Model.Vehiculo)
            {                
                <option value="@vehiculo.IdVehiculo">@vehiculo.Placa</option>            
            }
            </select>
    
   <button type="submit" class="btn btn-primary">Guardar</button>
   
</form>