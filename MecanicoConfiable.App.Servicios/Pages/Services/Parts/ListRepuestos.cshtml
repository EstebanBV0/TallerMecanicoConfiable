@page "{handler?}"
@model ListPartsModel
@{
    ViewData["Title"] = "Listado Repuestos";
}

<h1>  Repuestos</h1>
<a asp-page="/Services/ServicesTec" class="btn-defaoult">Volver</a>
<div class="form-group">
  <form method="get" id = "formuadmin" class="mt-5 mb-3 formuadmin"  >
        <label asp-for ="filter">Filtro</label></br>
        <input name="part" asp-for = "filter" class="form-control" ></br>
        <button type="submit" class="btn btn-primary">Filtrar</button>
  </form>
</div>
<table class="table mt-5 mb-3">

    <thead>
      <tr>
        <th>ID Repuesto</th>
        <th>Nombre</th>
        <th>Valor</th>
           
        
      </tr>
    </thead>
    @foreach (var parts in Model.Repuestos)
    {
        <tr>
            <td>@parts.IdRepuesto</td>
            <td>@parts.Nombre</td>
            <td>@parts.Valor</td>
            <td>
              <a class="btn btn-primary table-btn" asp-page="./EditRepuesto" asp-route-IdRepuesto = "@parts.IdRepuesto">Editar</a>
              <a class="btn btn-danger" asp-page="./DeleteRepuesto" asp-route-IdRepuesto = "@parts.IdRepuesto">Eliminar</a>
              
            </td>

        </tr>
    }
</table>