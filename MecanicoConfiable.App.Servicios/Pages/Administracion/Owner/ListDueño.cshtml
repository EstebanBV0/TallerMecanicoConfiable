@page "{handler?}"
@model ListDueñosModel
@{
    ViewData["Title"] = "Listadueño";
}

<h1>Propietarios de vehiculos actualmente</h1>
<a asp-page="/Administracion/Administrador" class="btn-defaoult">Volver</a>
<div class="form-group">
  <form method="get" id = "formuadmin" class="mt-5 mb-3 formuadmin"  >
        <label asp-for ="filter">Filtro</label></br>
        <input name="owner" asp-for = "filter" class="form-control" ></br>
        <button type="submit" class="btn btn-primary">Filtrar</button>
  </form>
</div>
<table class="table mt-5 mb-3">

    <thead>
      <tr>
        <!--<th>ID</th>-->
        <th>Nombre</th>
        <th>Apellido</th>
        <!--<th>Fecha de Nacimiento</th>
        <th>Direccion</th>
        <th>Número de Teléfono</th>
        <th>Email</th>
        <th>Ciudad</th>-->
        
      </tr>
    </thead>
    @foreach (var dueño in Model.Dueños)
    {
        <tr>
            <!--<td>@dueño.IdDueño</td>-->
            <td>@dueño.Nombre</td>
            <td>@dueño.Apellido</td>
            <!--<td>dueño.FechaNacimiento</td>-->
            <!--<td>dueño.Direccion</td>-->
            <!--<td>dueño.NumeroTelefono</td>-->
            <!--<td>dueño.Email</td>-->
            <!--<td>dueño.Ciudad</td>-->
            
            <td>
              <a class="btn btn-primary table-btn" asp-page="./EditDueño" asp-route-IdDueño = "@dueño.IdDueño">Editar</a>
              <a class="btn btn-danger" asp-page="./DeleteDueño" asp-route-IdDueño = "@dueño.IdDueño">Eliminar</a>
              <a class="btn btn-primary table-btn" asp-page="./DetailDueño" asp-route-IdDueño = "@dueño.IdDueño">Detalle</a>

            </td>

        </tr>
    }
</table>