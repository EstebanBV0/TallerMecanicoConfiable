@page 
@model ListAuxiliarModel
@{
    ViewData["Title"] = "Listaauxiliar";
}

<h1>Lista Auxiliares</h1>

 <a asp-page="/Administracion/Administrador" class="btn-defaoult">Volver</a>
 <div class="form-group">
  <form method="get" id = "formuadmin" class="mt-5 mb-3 formuadmin"  >
        <label asp-for ="filter">Filtro</label></br>
        <input name="aux" asp-for = "filter" class="form-control" ></br>
        <button type="submit" class="btn btn-primary">Filtrar</button>
  </form>
</div>

<table class="table mt-5 mb-3">

    <thead>
      <tr>
        <!--<th>ID</th>-->
        <th>Nombre</th>
        <th>Apellido</th>
        <!--<th>Nivel de estudio</th>
        <th>Numero de telefono</th>
        <th>Direccion</th>
        <th>Fecha de nacimiento</th>-->
      </tr>
    </thead>
    @foreach (var auxiliar in Model.Auxiliares)
    {
        <tr>
            <!--<td>auxiliar.IdAuxiliar</td>-->
            <td>@auxiliar.Nombre</td>
            <td>@auxiliar.Apellido</td>
            <!--<td>auxiliar.NivelEstudio</td>-->
            <!--<td>auxiliar.NumeroTelefono</td>-->
            <!--<td>auxiliar.Direccion</td>-->
            <!--<td>auxiliar.FechaNacimiento</td>-->
            <td>
              <a class="btn btn-primary table-btn" asp-page="./EditAuxiliar" asp-route-IdAuxiliar = "@auxiliar.IdAuxiliar">Editar</a>
              <a class="btn btn-danger" asp-page="./DeleteAuxiliar" asp-route-IdAuxiliar = "@auxiliar.IdAuxiliar">Eliminar</a>
              <a class="btn btn-primary table-btn" asp-page="./DetailAuxiliar" asp-route-IdAuxiliar = "@auxiliar.IdAuxiliar">Detalle</a>

            </td>

        </tr>
    }
</table>